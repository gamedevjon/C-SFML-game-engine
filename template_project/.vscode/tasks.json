{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build SFML app",
      "type": "shell",
      "command": "clang++",
      "args": [
        "src/*.cpp",
        "-std=c++17",
        "-g",
        "-I", "include/",
        "-I", "../SFML/include",
        "-L", "../SFML/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-Wl,-rpath,@executable_path/../SFML/lib",
        "-o", "main"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Build SFML project using clang++"
    }
  ]
}